<h2 class="page-header"><%= book.title %></h2>
<div class="book-details">
  <div>
    <img class="book-cover" src="<%= book.coverImagePath %>">
    <div class="book-details-btn-grid">
      <a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edit</a>
      <%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>
      
    </div>
  </div>
  <div class="book-details-grid">
    <div class="book-details-label">Title:</div>
    <div><%= book.title %></div>
    <div class="book-details-label">Release Date:</div>
    <div><%= book.releaseDate.toDateString() %></div>
    <div class="book-details-label">Popularity:</div>
    <div><%= book.popularity %></div>
    <div class="book-details-label">Overview:</div>
    <div><%= book.overview %></div>
  </div>
</div>