<div class="form-row">
    <div class="form-item">
      <label>Title</label>
      <input type="text" name="title" value="<%= book.title %>">
    </div>
  </div>
 
  <div class="form-row">
    <div class="form-item">
      <label>Release Date</label>
      <input type="date" name="releaseDate"
            value="<%= book.releaseDate == null ? '' : book.releaseDate.toISOString().split('T')[0] %>">
    </div>
    <div class="form-item">
      <label>Popularity</label>
      <input type="number" step="0.01" name="popularity" value="<%= book.popularity %>">
    </div>
  </div>

  <div class="form-row">
    <div class="form-item">
      <label>Vote Average</label>
      <input type="number" step="0.1" name="voteAverage" value="<%= book.voteAverage %>">
    </div>


  </div>
  
  <div class="form-row">
    <div class="form-item form-item-no-grow">
      <label>Poster</label>
      <input type="file" name="cover" class="book-cover filepond">
    </div>
    <div class="form-item">
      <label>Overview</label>
      <textarea name="overview"><%= book.overview %></textarea>
    </div>
  </div>