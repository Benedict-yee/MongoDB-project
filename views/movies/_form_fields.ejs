<div class="form-row">
    <div class="form-item">
      <label>Title</label>
      <input type="text" name="title" value="<%= movie.title %>">
    </div>
  </div>
 
  <div class="form-row">
    <div class="form-item">
      <label>Release Date</label>
      <input type="date" name="releaseDate"
            value="<%= movie.releaseDate == null ? '' : movie.releaseDate.toISOString().split('T')[0] %>">
    </div>
    <div class="form-item">
      <label>Popularity</label>
      <input type="number" step="0.01" name="popularity" value="<%= movie.popularity %>">
    </div>
  </div>

  <div class="form-row">
    <div class="form-item">
      <label>Vote Average</label>
      <input type="number" step="0.1" name="voteAverage" value="<%= movie.voteAverage %>">
    </div>


  </div>
  
  <div class="form-row">
    <div class="form-item form-item-no-grow">
      <label>Poster</label>
      <input type="file" name="cover" class="movie-cover filepond">
    </div>
    <div class="form-item">
      <label>Overview</label>
      <textarea name="overview"><%= movie.overview %></textarea>
    </div>
  </div>